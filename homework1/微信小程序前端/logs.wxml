<!--logs.wxml-->
<view class="container">
  <camera binderror="handleError" style="width: 100%; height: 300px;"></camera>
  <button type="primary" bindtap="takePhoto">拍照</button>
  <button  type="primary" bindtap="chooseImage">选择图片</button>
  <image src="{{image}}" mode="aspectFit"></image>
  <input placeholder="请输入消息" bindinput="onMessageInput"></input>
  <button type="primary" bindtap="sendMessage">发送</button>
</view>
